KeepAlive yes
HashKnownHosts no
# SendEnv LC_AUTH_*

## Elfwerks
##
Host git.elfwerks gitolite.elfwerks
     User git

Host portal.elfwerks.org
     User ericg
     Port 1022

Host git.elfwerks.org
     User git
     Port 1022

Host *.elfwerks 10.3.4.*
    User ericg
    ForwardX11 yes
    ForwardX11Trusted yes
    ForwardAgent yes

Host *.elfwerks.org
    User ericg
    ForwardX11 yes
    ForwardAgent yes

Host *.elfwerks.net
    User gustafer
    ForwardX11 yes
    ForwardAgent yes
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no

# elfcloud (HP dev on local LAN)
Host *elfcloud 10.3.7.*
    User gustafer
    ForwardX11 yes
    ForwardX11Trusted yes
    ForwardAgent yes


## GitHub
##
Host github.com
    User git


## Local Environments
##

# VirtualBox Internal Host Network
